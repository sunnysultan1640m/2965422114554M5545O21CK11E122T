<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_transaction_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/space_mini_2"
    >

    <RelativeLayout
        android:layout_width="@dimen/space_10"
        android:layout_height="match_parent"
        android:background="@color/colorGray"
        >

        <ImageView
            android:layout_width="@dimen/button_height"
            android:layout_height="@dimen/button_height"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_transaction_item"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space_mini_2"
        android:background="@color/colorGray"
        >

        <TextView
            android:id="@+id/tv_transaction_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:paddingTop="@dimen/space_1"
            android:paddingBottom="@dimen/space_1"
            android:text="@string/transaction_item_name"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/sub_head" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/textColorSecondary"></LinearLayout>

        <TextView
            android:paddingTop="@dimen/space_1"
            android:id="@+id/tv_total_amount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:textColor="@color/textColorPrimary"
            android:layout_marginBottom="@dimen/space_1"
            android:lineSpacingMultiplier = "1.15"
            android:text="@string/transaction_item_price"
            android:textSize="@dimen/body2" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/space_1"
            android:paddingRight="@dimen/space_1"
            android:textColor="@color/textColorPrimary"
            android:layout_marginBottom="@dimen/space_1"
            android:lineSpacingMultiplier = "1.15"
            android:text="@string/transaction_qty"
            android:textSize="@dimen/body2" />

    </LinearLayout>

</LinearLayout>



